extends _bootstrap
append styles
	// Custom styles for this template
	link(href='/cdms/css/dashboard.css', rel='stylesheet')
	link(href='/cdms/css/style.css', rel='stylesheet')
	link(href="/cdms/css/jquery-ui-1.9.2.custom.css", rel="stylesheet" )
block body  
	//- top panel
		
	nav.navbar.navbar-inverse.navbar-fixed-top
		.container-fluid
			.navbar-header
				-if(status >= 0 )
					button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
				a.navbar-brand(href='/cdms') 
					img(alt="Brand" src="/cdms/images/logo.png")
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav.navbar-right
					-if(status >= 0 )
						-if(status ==1 || status ==2)
							li(id='AdminMode')
								a(href='AdminMode') AdminMode
						li(id='modify')
							a(href='modify') Modify
						li(id="logout")
							a(href='logout') logout

	.container-fluid
		.row
			.col-sm-3.col-md-2.sidebar
				-if(status >= 0 )
					//- .test= doc.length
					
					-for(var i = 0 ; i < doc.length; ++i)
						div.sidetab
							a(href='#' id='sidetab' +i)=doc[i].project
						ul(class='nav nav-sidebar' id="sidetab" + i style="display:none;")
							-for(let j = 0 ; j < doc[i].subjects.length; ++j)
									li
										a(href='#' id=doc[i].subjects[j]._id)=doc[i].subjects[j].subject
				

			.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
				block content
